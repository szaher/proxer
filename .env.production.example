# Container image controls
PROXER_IMAGE_TAG=latest
# PROXER_GATEWAY_IMAGE=ghcr.io/szaher/proxer/gateway
# PROXER_AGENT_IMAGE=ghcr.io/szaher/proxer/agent

# Public endpoint for the gateway
PROXER_PUBLIC_BASE_URL=https://proxer.example.com
PROXER_HTTP_PORT=8080

# Required security credentials
PROXER_SUPER_ADMIN_USER=admin
PROXER_SUPER_ADMIN_PASSWORD=change-this-password
PROXER_AGENT_TOKEN=change-this-agent-token
PROXER_TLS_KEY_ENCRYPTION_KEY=change-this-to-a-long-random-key

# Optional behavior toggles
PROXER_PUBLIC_SIGNUP_ENABLED=false
PROXER_PUBLIC_SIGNUP_RPM=20
PROXER_MEMBER_WRITE_ENABLED=false

# Optional public download source override
PROXER_GITHUB_RELEASE_REPO=szaher/proxer
# PROXER_GITHUB_RELEASE_TAG=v1.0.0
# PROXER_GITHUB_TOKEN=ghp_xxx

# Optional sidecar agent profile (only used with --profile demo-agent)
# PROXER_AGENT_ID=prod-agent
# PROXER_AGENT_TUNNELS=app3000=http://host.docker.internal:3000
